@model edidoc.MVC.ViewModels.DocumentViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Document</h2>

<div>
    <h3>@Model.Title</h3>
    <textarea id="documentContent" rows="20" cols="80">@Model.Content</textarea>
</div>

<div>
    <h3>Comments</h3>
    <ul id="comments-list">
        @foreach (var comment in Model.Comments)
        {
            <li>@comment.Content - @comment.CreatedAt.ToString("g")</li>
        }
    </ul>
    <input type="text" id="newComment" placeholder="Add a comment"/>
    <button onclick="addComment()">Add</button>
</div>
